{% block _user_userGender_row %}
    {% set props = {
        fieldName: 'userGender'
    } %}
    <div class="form-group col-sm-3 col-xs-8 active user-edit__userGender">
        <label></label>
        <div class="checkbox checkbox-primary checkbox-circle">
            <input name="{{ props.fieldName }}"
                   id="user_{{ props.fieldName }}_male"
                   class="styled"
                   type="radio"
                    <%= checkGender({{ props.fieldName }}, 'male') %>
            value="male">
            <label for="user_{{ props.fieldName }}_male">
                Male
            </label>
            <input
                    name="{{ props.fieldName }}"
                    id="user_{{ props.fieldName }}_female"
                    class="styled" type="radio"
                        <%= checkGender({{ props.fieldName }}, 'female') %>
                    value="female">
            <label for="user_{{ props.fieldName }}_female">
                Female
            </label>
        </div>
    </div>
{% endblock %}

