{% macro showField(props) %}
    <div class="form-group {{ props.gridClass|default('col-sm-3 col-xs-8') }} {{ props.class|default('') }}">
        <label for="user_{{ props.fieldName }}">{{ props.label|default('') }}</label>
        <input name="{{ props.fieldName }}"  value="<%- {{ props.fieldName }} %>"
               type="{{ props.type|default('text') }}"
               class="form-control {{ props.inputClass|default('') }}"
               id="user_{{ props.fieldName }}" placeholder="{{ props.label|default("") }}">
    </div>
{% endmacro %}

{% block _user_userName_row %}
    {% set props = {fieldName: 'userName', label: 'User Name'} %}
    {{ _self.showField(props) }}
{% endblock %}

